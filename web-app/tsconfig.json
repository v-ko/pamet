{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "fusion": ["../fusion/js-src/src/index"],
      "fusion/*": ["../fusion/js-src/src/*"],
      "@/*": ["./src/*"]
